// Global default params, used in configs
params {
  samplefile = null
  run_starsolo = false
  outdir = 'results'
}

// Singularity environment parameters
singularity {
  enabled     = true
  autoMounts  = true
  cacheDir = '/nfs/cellgeni/singularity/images/'
  runOptions = '-B /lustre,/nfs'
}

// Configuring LSF job submission parameters for each process
executor {
  name = 'lsf'
  perJobMemLimit = true
}

process {

  errorStrategy = 'retry' 

  withName: step1 {
    cpus = 1
    memory = 4.GB
    queue = 'normal'
  }
  withName: step2 {
    cpus = 1
    memory = 8.GB
    queue = 'transfer'
    maxForks = 10 //don't overload databases with downloads
    maxRetries = 3 //incase wget is unstable
  }
  withName: step3 {
    cpus = 16
    memory = 128.GB
    queue = 'long'
    //need a container here!
  }
  withName: step4 {
    cpus = 1
    memory = 4.GB
    queue = 'normal'
  }
  withName: step5 {
    cpus = 16
    memory = 128.GB
    queue = 'long'
    container = '/nfs/cellgeni/singularity/images/starsolo_2-7-10a-alpha-220818_samtools_1-15-1_seqtk-1-13_bbmap_38-97_RSEM-1-3-3.sif'
  }
  withName: step6 {
    cpus = 1
    memory = 4.GB
    queue = 'normal'
  }
}

// Capture exit codes from upstream processes when piping
process.shell = ['/bin/bash', '-euo', 'pipefail']

// Capturing Nextflow log files into a reports directory
timeline {
   enabled = true
   overwrite = true
   file = "reports/timeline.html" 
}

report {
   enabled = true
   overwrite = true
   file = "reports/report.html" 
}

trace {
   enabled = true
   overwrite = true
   file = "reports/trace.txt"
}

// Ensures work directories and removed when pipeline completes
cleanup = true
