//This fixes nf-core launch error: roject <project-name> is currently stickied on revision: main 
manifest.defaultBranch = "nextflow-tower"

// Global default params, used in configs
params {
  samplefile = null
  sangerID = null
  timestamp = (new Date()).getTime()
  run_starsolo = false
  outdir = 'results'
  keep_bams = false
  sort_bam_mem = 60000000000 //bytes 
}

// Singularity environment parameters
singularity {
  enabled     = true
  autoMounts  = true
  cacheDir = '/nfs/cellgeni/singularity/images/'
  runOptions = '-B /lustre,/nfs'
}

// Configuring LSF job submission parameters for each process
executor {
  name = 'lsf'
  perJobMemLimit = true
}

process {

  errorStrategy = 'retry' 
  maxRetries = 3 //incase wget is unstable

  withName: step1 {
    cpus = 1
    memory = 4.GB
    queue = 'normal'
  }
  withName: step2 {
    cpus = 1
    memory = 8.GB
    queue = 'transfer'
    maxForks = 10 //don't overload databases with downloads
  }
  withName: step3 {
    cpus = 16
    memory = 128.GB
    queue = 'long'
    container = '/nfs/cellgeni/singularity/images/bamtofastq-seqtk-sratools.sif' //dockerfile in this repo
  }
  withName: step4 {
    cpus = 1
    memory = 4.GB
    queue = 'normal'
  }
  withName: step5 {
    cpus = 16
    memory = 128.GB
    queue = 'long'
    maxForks = 10 //don't overload copying of files to outdir
    container = '/nfs/cellgeni/singularity/images/starsolo_2-7-10a-alpha-220818_samtools_1-15-1_seqtk-1-13_bbmap_38-97_RSEM-1-3-3.sif' //dockerfile available here: https://github.com/cellgeni/STARsolo/blob/main/Dockerfile
  }
  withName: step6 {
    cpus = 1
    memory = 4.GB
    queue = 'normal'
  }
}

// Capture exit codes from upstream processes when piping
process.shell = ['/bin/bash', '-euo', 'pipefail']

// Capturing Nextflow log files into a reports directory
timeline {
   enabled = true
   file = "/lustre/scratch127/cellgen/cellgeni/tickets/nextflow-tower-results/${params.sangerID}/${params.timestamp}/reprocessing-reports/timeline.html"
   overwrite = true
}

report {
   enabled = true
   file = "/lustre/scratch127/cellgen/cellgeni/tickets/nextflow-tower-results/${params.sangerID}/${params.timestamp}/reprocessing-reports/report.html"
   overwrite = true
}

trace {
   enabled = true
   file = "/lustre/scratch127/cellgen/cellgeni/tickets/nextflow-tower-results/${params.sangerID}/${params.timestamp}/reprocessing-reports/trace.txt"
   overwrite = true
}

// Ensures work directories and removed when pipeline completes
cleanup = true
